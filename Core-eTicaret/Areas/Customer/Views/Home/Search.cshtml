@model IEnumerable<Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">

 @await Component.InvokeAsync("CategoryList")
 @if (Model.Count()>0)
{
    @foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6">
       
    <div class="p-2">
        <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
            <div class="card" style="border:0px;">
                <img src="@item.ImageUrl" class="card-img-top rounded" width="250" height="200" />
                <div class="pl-1">
                    <p class="card-title text-primary"><b>@item.Title</b></p>
                    <p class="card-title h5"> <b style="color:#2c3e50">@item.Description </b></p>
                </div>

                <div style="padding-left:5px;">
                    <p style="color:maroon"> Fiyat: <b class="">@item.Price.ToString("") ₺</b></p>
                </div>
            </div>
            <div>
                <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@item.Id">Detay</a>
            </div>
        </div>
    </div>
</div>
}
}else{
    <div class="alert alert-warning text-center">
        Herhangi bir ürün bulunmamaktadır...!
    </div>
}


</div>