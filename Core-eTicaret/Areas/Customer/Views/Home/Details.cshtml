@model Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input  hidden asp-for="ProductId"/>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-8 col-md-6">
                    <h1 class="text-primary">@Model.Product.Title</h1>

                </div>
                <div class="col-8 col-md-6 text-md-right pt-4">

                    <span class="badge badge-warning pt-2" style="height:30px;"> @Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Adet : @Model.Product.Quantity</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Fiyat : @Model.Product.Price.ToString("c")</h5>
                            </div>


                            <div class="row pl-2">
                                <p class="text-secondary"> Açıklama: @Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-4 text-primary"><h4>Sayı</h4></div>
                                <div class="col-8">
                                    <input class="form-control" asp-for="Count"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-8 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Anasayfa</a>
                    </div>
                    <div class="col-8 col-md-6 pb-1">

                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Sepete Ekle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
