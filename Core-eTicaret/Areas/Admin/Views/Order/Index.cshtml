
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var status = Context.Request.Query["status"];
    var beklenen = "text-primary";
    var onaylanan = "text-primary";
    var kargolandi = "text-primary";
    var hepsi = "text-primary";
    switch (status)
    {
        case "beklenen":
            beklenen = "active text-white";
            break;
        case "onaylanan":
            onaylanan = "active text-white";
            break;
        case "kargolandi":
            kargolandi = "active text-white";
            break;
        default:
            hepsi = "active text-white";
            break;
    }
}
<div class="border p-3">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Sipariş Listesi </h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-controller="Order"
                   asp-action="Index" asp-route-status="onaylanan">
                    <li class="list-group-item @onaylanan">Onaylanan Siparişler</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order"
                   asp-action="Index" asp-route-status="beklenen">
                    <li class="list-group-item @beklenen">Beklenen Siparişler</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order"
                   asp-action="Index" asp-route-status="kargolandi">
                    <li class="list-group-item @kargolandi">Kargolanan Siparişler</li>
                </a>

                <a style="text-decoration:none;" asp-controller="Order"
                   asp-action="Index" asp-route-status="hepsi">
                    <li class="list-group-item @hepsi">Bütün Siparişler</li>
                </a>
            </ul>
        </div>
    </div>
    <br /> <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Ad</th>
                <th>Soyad</th>
                <th>Telefon</th>
                <th>Email</th>
                <th>Sipariş Durumu</th>
                <th>Miktar</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>
@section Scripts{ 
    <script src="~/js/order.js"></script>
}